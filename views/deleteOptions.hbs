{{#if engine}}
<form action="/options/deleteoptions" method="POST">
  <option name="carcass">Название двигателя</option>
  <select name="engineOldName" id="engine">
    {{#each engine}}
    <option value="{{this.name}}">{{this.name}}</option>
    {{/each}}
  </select>
  <button class="add" type="submit">Удалить</button>
</form>
{{/if}}

