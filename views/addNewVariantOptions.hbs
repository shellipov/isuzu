{{#if engine}}
<div class="wrapper fadeInDown">
  <form action="/options/addoptions" method="POST">
    <option name="carcass">Двигатель</option>
    <input type="text" class="fadeIn third" placeholder="Название" name="engineName">
    <input type="text" placeholder="Объем" name="engineVolume" class="fadeIn third">
    <input type="text" placeholder="Поршни" name="enginePower" class="fadeIn third">
    <input type="text" placeholder="Тип двигателя" name="engineType" class="fadeIn third">
    <button class="add" type="submit">Добавить</button>
  </form>
</div>
{{/if}}

{{#if carcass}}
<form action="/options/addoptions" method="POST">
  <option name="carcass">Каркас</option>
  <input type="text" placeholder="Название" name="carcassName" class="fadeIn third">
  <input type="text" placeholder="Тип каркаса" name="carcassType" class="fadeIn third">
  <button class="add" type="submit">Добавить</button>
</form>
{{/if}}

{{#if transmission}}
<form action="/options/addoptions" method="POST">
