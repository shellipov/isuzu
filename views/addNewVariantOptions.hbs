  <input type="text" placeholder="Название" name="transName" class="fadeIn third">
  <input type="text" placeholder="Количество передач" name="transCount" class="fadeIn third">
  <input type="text" placeholder="Тип коробки" name="transType" class="fadeIn third">
  <button class="add" type="submit">Добавить</button>
</form>
{{/if}}

{{#if color}}
<form action="/options/addoptions" method="POST">
  <option name="color">Цвет</option>
  <input type="text" placeholder="Название" name="color" class="fadeIn third">
  <input type="text" placeholder="Ссылка на фотографию" name="urlImage" class="fadeIn third">
  <button class="add" type="submit">Добавить</button>
</form>
{{/if}}
